# Descope AI GTM Intelligence Engine Configuration
# Copy this file to .env and fill in your API keys

# OpenAI Configuration (Required)
OPENAI_API_KEY=your_openai_api_key_here

# GitHub Integration (Optional)
GITHUB_TOKEN=your_github_personal_access_token

# Reddit Integration (Optional)
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret

# Company Data Enrichment APIs (Optional)
CLEARBIT_API_KEY=your_clearbit_api_key
HUNTER_API_KEY=your_hunter_io_api_key
BUILTWITH_API_KEY=your_builtwith_api_key
CRUNCHBASE_API_KEY=your_crunchbase_api_key

# Slack Integration (Optional)
SLACK_BOT_TOKEN=your_slack_bot_token
SLACK_CHANNEL_ID=your_slack_channel_id

# Email Notifications (Optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
NOTIFICATION_EMAIL=sales-team@company.com

# Database Configuration (Optional - for production)
DATABASE_URL=postgresql://user:password@localhost:5432/gtm_engine

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379

# Application Settings
DEBUG=True
LOG_LEVEL=INFO
MAX_WORKERS=4
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# GTM Scoring Weights
FIRMOGRAPHIC_WEIGHT=0.4
SIGNAL_WEIGHT=0.4
TECH_STACK_WEIGHT=0.2

# Alert Thresholds
GTM_SCORE_THRESHOLD=70
SIGNAL_SEVERITY_THRESHOLD=7
MONITORING_INTERVAL_MINUTES=15

# Outreach Configuration
MAX_OUTREACH_ATTEMPTS=3
OUTREACH_COOLDOWN_DAYS=7
